@model ProductViewModel

<h2>@ViewData["Title"] for <b style="color: darkred">"@Model.ClientName"</b></h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" requred />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDiscount">Default Discount</label>
                <input asp-for="DefaultDiscount" class="form-control" />
                <span asp-validation-for="DefaultDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive">Is Active</label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group" hidden=>
                <label asp-for="ClientId"></label>
                <input asp-for="ClientId" class="form-control" requred />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden=>
                <label asp-for="ClientName"></label>
                <input asp-for="ClientName" class="form-control" requred />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="@ViewData["CancelAction"]" asp-route-id="@Model.ClientId" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}