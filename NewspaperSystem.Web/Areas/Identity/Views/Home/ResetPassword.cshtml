@model IdentityResetPasswordVewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password for user "@Model.Username"</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="width: 40%">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group" style="width: 40%">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" style="width: 180px" class="btn btn-primary btn-lg">Reset Password</button>
    <a>&emsp;&emsp;&emsp;</a>
    <a href="/identity/home/AllUsers" style="width: 180px" class="btn btn-default btn-lg">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
