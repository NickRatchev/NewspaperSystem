@using NewspaperSystem.Data
@model WebSizeViewModel
    
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WebName">Web Name</label>
                <input asp-for="WebName" class="form-control" requred />
                <span asp-validation-for="WebName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebWidth">Web Width (mm)</label>
                <input asp-for="WebWidth" type="number" class="form-control" min="@DataConstants.MinWebWidth" max="@DataConstants.MaxWebWidth" step="1" />
                <span asp-validation-for="WebWidth" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="AllWebSizes" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}