@model MaterialConsumptionViewModel

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" requred />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageWidth">Page Width (mm)</label>
                <input asp-for="PageWidth" type="number" class="form-control" min="0" step="1" />
                <span asp-validation-for="PageWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageHeight">Page Height (mm)</label>
                <input asp-for="PageHeight" type="number" class="form-control" min="0" step="1" />
                <span asp-validation-for="PageHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foil">Foil (kg for 1000 pages)</label>
                <input asp-for="Foil" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="Foil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tape">Tape (m for 1000 pages)</label>
                <input asp-for="Tape" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="Tape" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wischwasser">Wischwasser (kg for 1000 pages)</label>
                <input asp-for="Wischwasser" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="Wischwasser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InkBlack">Black Ink (kg for 1000 pages)</label>
                <input asp-for="InkBlack" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="InkBlack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InkColor">Color Ink (kg for 1000 pages)</label>
                <input asp-for="InkColor" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="InkColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlateDeveloper">Plate Developer (l for 100 plates)</label>
                <input asp-for="PlateDeveloper" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="PlateDeveloper" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="@ViewData["CancelAction"]" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}