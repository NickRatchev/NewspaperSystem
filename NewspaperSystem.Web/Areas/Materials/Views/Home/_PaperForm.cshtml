@model PaperTypeViewModel
    
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" requred />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grammage"></label>
                <input asp-for="Grammage" type="number" class="form-control" min="40" max="60" step="0.1" />
                <span asp-validation-for="Grammage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="AllPaperTypes" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}