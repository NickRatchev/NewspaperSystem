@model PaperViewModel

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaperTypeId">Paper Type</label>
                <select asp-for="PaperTypeId" asp-items="Model.PaperTypes" class="form-control"></select>
                <span asp-validation-for="PaperTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" requred />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price (BGN/t)</label>
                <input asp-for="Price" type="number" class="form-control" min="0" step="0.0001" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SafetyMargin">SafetyMargin (%)</label>
                <input asp-for="SafetyMargin" type="number" class="form-control" min="0" max="100" step="0.001" />
                <span asp-validation-for="SafetyMargin" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="@ViewData["CancelAction"]" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}