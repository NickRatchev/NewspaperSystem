@model PaperWasteViewModel

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" requred />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoreWaste">Core Waste (%)</label>
                <input asp-for="CoreWaste" type="number" class="form-control" min="0" max="100" step="0.0001" />
                <span asp-validation-for="CoreWaste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrintingWaste">Printing Waste (%)</label>
                <input asp-for="PrintingWaste" type="number" class="form-control" min="0" max="100" step="0.0001" />
                <span asp-validation-for="PrintingWaste" class="text-danger"></span>
            </div>
            <br />
            <div>
                <a class="form-group col-md-6">
                    <label asp-for="Key1">Number Of Pages Key1</label>
                    <input asp-for="Key1" type="number" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Key1" class="text-danger"></span>
                </a>
                <a class="form-group col-md-6">
                    <label asp-for="Value1">Waste 1 (%)</label>
                    <input asp-for="Value1" type="number" class="form-control" min="0" max="100" step="0.0001" />
                    <span asp-validation-for="Value1" class="text-danger"></span>
                </a>
            </div>
            <div>
                <a class="form-group col-md-6">
                    <label asp-for="Key2">Number Of Pages Key2</label>
                    <input asp-for="Key2" type="number" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Key2" class="text-danger"></span>
                </a>
                <a class="form-group col-md-6">
                    <label asp-for="Value2">Waste 2 (%)</label>
                    <input asp-for="Value2" type="number" class="form-control" min="0" max="100" step="0.0001" />
                    <span asp-validation-for="Value2" class="text-danger"></span>
                </a>
            </div>
            <div>
                <a class="form-group col-md-6">
                    <label asp-for="Key3">Number Of Pages Key3</label>
                    <input asp-for="Key3" type="number" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Key3" class="text-danger"></span>
                </a>
                <a class="form-group col-md-6">
                    <label asp-for="Value3">Waste 3 (%)</label>
                    <input asp-for="Value3" type="number" class="form-control" min="0" max="100" step="0.0001" />
                    <span asp-validation-for="Value3" class="text-danger"></span>
                </a>
            </div>
            <div>
                <a class="form-group col-md-6">
                    <label asp-for="Key4">Number Of Pages Key4</label>
                    <input asp-for="Key4" type="number" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Key4" class="text-danger"></span>
                </a>
                <a class="form-group col-md-6">
                    <label asp-for="Value4">Waste 4 (%)</label>
                    <input asp-for="Value4" type="number" class="form-control" min="0" max="100" step="0.0001" />
                    <span asp-validation-for="Value4" class="text-danger"></span>
                </a>
            </div>
            <div>
                <a class="form-group col-md-6">
                    <label asp-for="Key5">Number Of Pages Key5</label>
                    <input asp-for="Key5" type="number" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Key5" class="text-danger"></span>
                </a>
                <a class="form-group col-md-6">
                    <label asp-for="Value5">Waste 5 (%)</label>
                    <input asp-for="Value5" type="number" class="form-control" min="0" max="100" step="0.0001" />
                    <span asp-validation-for="Value5" class="text-danger"></span>
                </a>
            </div>
            <br />&nbsp;<br />
            <br />&nbsp;<br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="@ViewData["CancelAction"]" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}