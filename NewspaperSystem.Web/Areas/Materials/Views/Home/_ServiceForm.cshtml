@model ServicePriceViewModel

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" requred />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlateExposing">Plate Exposing (BGN)</label>
                <input asp-for="PlateExposing" type="number" class="form-control" min="0" step="0.001" />
                <span asp-validation-for="PlateExposing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MachineSetup">Machine Setup (BGN)</label>
                <input asp-for="MachineSetup" type="number" class="form-control" min="0" step="0.001" />
                <span asp-validation-for="MachineSetup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impression">Impression (BGN)</label>
                <input asp-for="Impression" type="number" class="form-control" min="0" step="0.001" />
                <span asp-validation-for="Impression" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Packing">Packing (BGN)</label>
                <input asp-for="Packing" type="number" class="form-control" min="0" step="0.001" />
                <span asp-validation-for="Packing" class="text-danger"></span>
            </div>
            <br />
            <br />
            <button type="submit" class="col-md-5 btn btn-primary btn-lg">@ViewData["SubmitButton"]</button>
            <a class="col-md-2">&emsp;</a>
            <a asp-action="@ViewData["CancelAction"]" class="col-md-5 btn btn-default btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}